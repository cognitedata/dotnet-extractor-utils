{
    "$id": "/dotnet/metrics_config.schema.json",
    "type": "object",
    "properties": {
        "server": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                }
            }
        },
        "push-gateways": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "host": {
                        "type": "string"
                    },
                    "job": {
                        "type": "string"
                    },
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "push-interval": {
                        "type": "integer",
                        "default": 1
                    }
                }
            }
        }
    }
}